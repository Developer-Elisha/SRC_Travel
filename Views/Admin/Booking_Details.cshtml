@model IEnumerable<SRC_Travel_Agencies.Models.Ticket>

@{
    ViewData["Title"] = "Booking_Details";
    Layout = "~/Views/Shared/Admin_header_footer.cshtml";
}

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="nav-dd rounded h-100 p-4">
                <h4 class="mb-4">Booking Details</h4>
                <div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                                    Ticket Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                                    Estimated Hours
            </th>
            <th>
                                    Seat Number
            </th>
            <th>
                                    Ticket Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estimated_Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <a asp-action="Cancel_Ticket" asp-route-id="@item.TicketId">Cancel Ticket</a>
            </td>
        </tr>
}
    </tbody>
</table>
 </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->