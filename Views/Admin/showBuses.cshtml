@model IEnumerable<SRC_Travel_Agencies.Models.Upload_Bus>

@{
    ViewData["Title"] = "showBuses";
    Layout = "~/Views/Shared/Admin_header_footer.cshtml";
}

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="nav-dd rounded h-100 p-4">
                <h4 class="mb-4">Uploaded Buses</h4>
                <div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                                    Bus Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                 Price per KM
            </th>
            <th>
                                    Air Condition
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bus_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Air_Condition)
            </td>
            <td>
                    <a asp-action="Update_Bus" asp-route-id="@item.Bus_id">Edit</a> |
                    <a asp-action="delete_Bus" asp-route-id="@item.Bus_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
 </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->