@model SRC_Travel_Agencies.Models.Employees

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/login.cshtml";
}


         <!-- Sign In Start -->
        <div class="container-fluid ">
            <div class="row h-100 align-items-center justify-content-center " style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-white rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a>
                                 <img src="~/admin_assets/img/logo_dark.png" alt="bus" height="70" width="160">
                            </a>
                            <h3>Sign In</h3>
                        </div>
                       <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" style="background-color: white;"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" style="background-color: white;"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr />
            <p style="color: red;">@ViewBag.err</p>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn btn-primary w-100" />
            </div>
        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In End -->