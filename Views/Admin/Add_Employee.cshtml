@model SRC_Travel_Agencies.Models.Employees

@{
    ViewData["Title"] = "Add_Employee";
    Layout = "~/Views/Shared/Admin_header_footer.cshtml";
}

<center>
<h1  style="color: white;">Add New Employee</h1>
</center>
<hr />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-xl-12">
            <div class="nav-dd rounded h-100 p-4">
<hr />

        <form asp-action="Add_Employee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control " style="background-color: white;" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control " style="background-color: white;" />
            <span asp-validation-for="Age" class="text-danger"></span>
           </div>
    </div>
            <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control " style="background-color: white;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control " style="background-color: white;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
    </div>
            <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control " style="background-color: white;" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control " style="background-color: white;" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
    </div>
            <div class="row">
           <div class="form-group col-lg-6">
                <label asp-for="Qualification" class="control-label"></label>
    <select asp-for="Qualification" class="form-control " style="background-color: white;">
        <option value="Middle">Middle</option>
        <option value="Matriculation">Matriculation</option>
    </select>
    <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
    </div>
    <hr />
            <div class="form-group">
                <input type="submit" value="Register New Employee" class="btn btn-primary w-100" />
            </div>
        </form>
</div>
</div>
<div>
</div>



